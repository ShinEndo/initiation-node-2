<div class="data-form">
  <form
    class="form-signin"
    action="<%=`/subscribers/${subscriber._id}/update?_method=PUT`%>"
    method="POST"
  >
    <h2 class="form-signin-heading">Update a subscriber:</h2>
    <label for="inputName">Name</label>
    <input
      type="text"
      name="name"
      id="inputName"
      class="form-control"
      placeholder="Name"
      autofocus
      value="<%= subscriber.name %>"
    />
    <label for="inputEmail">Email address</label>
    <input
      type="email"
      name="email"
      id="inputEmail"
      class="form-control"
      placeholder="Email address"
      required
      value="<%= subscriber.email %>"
    />
    <label for="inputZipCode">Zip Code</label>
    <input
      type="text"
      name="zipCode"
      id="inputZipCode"
      pattern="\d*"
      class="form-control"
      placeholder="Zip Code"
      required
      value="<%= subscriber.zipCode %>"
    />
    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">
      Update
    </button>
  </form>
</div>
